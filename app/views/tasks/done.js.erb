<% @tasks_done = @p.tasks.where(done: true) %>
<% @tasks_not_done = @p.tasks.where(done: false) %>
$("#task_list").replaceWith("<%= j render '/projects/task_list' %>")

// show the task again
$("#<%= dom_id(@task) %>").append("<%= j render '/tasks/show' %>");
$("#show_<%= dom_id(@task) %>").show();
$("#show_button_<%= dom_id(@task) %>").html("Hide");
$("#<%= dom_id(@task) %> .time").hide();
