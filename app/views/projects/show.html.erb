<h1><%= @p.title %></h1>
<p><%= @p.description %></p>
<p>Due date: <%= @p.due_date.to_formatted_s(:long) if @p.due_date%></p>
<p>Created by: <%= @p.user.first_name %> <%= @p.user.last_name %></p>
<p>Members: <%= "None" unless @members.present? %></p>
<ul>
<% @members.each do |member| %>
  <li><%= "#{member.first_name} #{member.last_name}" %></li>
<% end %>
</ul>

<% if @p.tags.any? %>
  Tagged with:
  <% @p.tags.each do |tag| %>
    <div class="label label-primary"><%= tag.name %></div>
  <% end %>
<% end %>

<% if can? :edit, @p %>
  <%= link_to "Edit", edit_project_path(@p), class: "btn btn-info btn-sm" %>
<% end %>
<% if can? :destroy, @p %>
  <%= link_to "Delete", project_path(@p), {method: :delete, class: "btn btn-danger btn-sm", data: {confirm: "Are you sure you want to delete this project?"}}%>
<% end %>

<% if !(can? :edit, @p) %>
  <% if user_signed_in? && @p.joined_by?(current_user) %>
    <%= link_to "Unjoin", project_member_path(@p, @p.join_for(current_user)),
                      method: :delete, class: "btn btn-primary btn-sm" %>
  <% else %>
    <%= link_to "Join", project_members_path(@p), class: "btn btn-primary btn-sm",
                        method: :post %>
  <% end %>
<% end %>

<% if user_signed_in? && @p.favourited_by?(current_user) %>
  <%= link_to fa_icon("star"), [@p, @p.favourite_for(current_user)],
                method: :delete, class: "icon-big" %>
<% else %>
  <%= link_to fa_icon("star-o"), project_favourites_path(@p), method: :post,
                class: "icon-big" %>
<% end %>
Favourited: <%= pluralize(@p.favourites.count, "time") %>

<h2>Tasks</h2>
<%= link_to("Add Task", new_project_task_path(@p), class: "btn btn-primary") %>

<% if @tasks_done.blank? && @tasks_not_done.blank? %>
  <p>none</p>
<% else %>
  <h4>Not Done</h4>
  <% if @tasks_not_done.blank? %>
    <p>none</p>
  <% else %>
    <% @tasks_not_done.each do |task| %>
      <div class="well">
        <%= task.title %>
        <%= link_to "Show", project_task_path(@p, task), class: "btn btn-sm btn-primary pull-right"%>
        <div class="time pull-right">Due: <%= task.due_date.to_formatted_s(:short) if task.due_date %></div>
      </div>
    <% end %>
  <% end %>

  <h4>Done</h4>
  <% if @tasks_done.blank? %>
    <p>none</p>
  <% else %>
    <% @tasks_done.each do |task| %>
      <div class="well">
        <%= task.title %>
        <%= link_to "Show", project_task_path(@p, task), class: "btn btn-primary btn-sm pull-right"%>
        <div class="time pull-right">Due: <%= task.due_date.to_formatted_s(:short) if task.due_date%></div>
      </div>
    <% end %>
  <% end %>
<% end %>


<%= link_to("View Discussions (#{@p.discussions.length})", project_discussions_path(@p), class: "btn btn-primary") %>
